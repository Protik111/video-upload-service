generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  email     String
  role      Role     @default(user)
  gender    String
  password  String
  createdAt DateTime @default(now())
  videos    Video[]

  @@map("users")
}

model Video {
  id          String   @id @default(uuid())
  title       String
  description String
  filePath    String
  createdAt   DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  userId String

  @@map("videos")
}

enum Role {
  user
  admin
  moderator
}
